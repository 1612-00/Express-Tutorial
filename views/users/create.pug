extends ../layouts/common
block content
	div(class="container")
		h1 Create user
		//- Nếu có lỗi thì in lỗi ra 
		if errors
			each error in errors
				.alert.alert-danger= error

		form(action="/users/create", method="POST", class="form-group")
			.form-group
				label(for="#name") Name
				input(name="name", id="name", type="text", class="form-control ml-2 mr-2", value=values ? values.name : "")
				//- gán giá trị đã nhập vào bằng thuộc tính value
			.form-group
				label(for="phone") Phone
				input(name="phone", id="phone", type="text", class="form-control ml-2 mr-2", value=values ? values.phone : "")

			button(class="btn btn-info") Create
			